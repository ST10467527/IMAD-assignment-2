<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvFinalScore"
            android:layout_width="294dp"
            android:layout_height="27dp"
            android:gravity="center"
            android:text="Your final score is: 0/0"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMotivationalMsg"
            android:layout_width="305dp"
            android:layout_height="21dp"
            android:gravity="center"
            android:text="Keep up the great work!"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFinalScore" />

        <Button
            android:id="@+id/btnReviewAnswers"
            android:layout_width="324dp"
            android:layout_height="36dp"
            android:text="Review Answers"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMotivationalMsg" />

        <Button
            android:id="@+id/btnRetake"
            android:layout_width="330dp"
            android:layout_height="35dp"
            android:text="Retake Test"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnReviewAnswers" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="319dp"
            android:layout_height="44dp"
            android:text="Exit"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRetake" />

        <TextView
            android:id="@+id/tvReview"
            android:layout_width="362dp"
            android:layout_height="528dp"
            android:background="#EFEFEF"
            android:gravity="start"
            android:maxHeight="250dp"
            android:overScrollMode="always"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnExit"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
